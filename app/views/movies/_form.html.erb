<%= form_with(model: movie) do |form| %>
  <% if movie.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :Duração, style: "display: block" %>
    <%= form.number_field :duration %>
  </div>

  <div>
    <%= form.label :Lançamento, style: "display: block" %>
    <%= form.number_field :year %>
  </div>

  <div>
    <%= form.label :Sinopse, style: "display: block" %>
    <%= form.text_area :resume %>
  </div>
  <div>
    <%= form.label :Diretor, style: "display: block" %>
    <%= form.collection_select :director_id, Director.all, :id, :name %>
  </div>

  <div>
    <%= form.label :Gênero, style: "display: block" %>
    <%= form.collection_select :genre_id, Genre.all, :id, :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
