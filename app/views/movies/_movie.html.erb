<div id="<%= dom_id movie %>">

  <p style="align-content: center">
    <% if movie.image.present? %>
      <img src="<%= movie.image %>" width="280"  >
    <% end %>
  </p>
  <p>
    <strong>Title:</strong>
    <%= movie.title %>
  </p>

  <p>
    <strong>Duration:</strong>
    <%= movie.duration %>
  </p>

  <p>
    <strong>Year:</strong>
    <%= movie.year %>
  </p>

  <p>
    <strong>Resume:</strong>
    <%= movie.resume %>
  </p>

</div>
